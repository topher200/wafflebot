# Copy this file to terraform.tfvars and fill in your actual values
# terraform.tfvars will be gitignored to keep your secrets safe

# AWS region for most resources (ACM cert will be in us-east-1 automatically)
aws_region = "us-east-1"

# S3 bucket name - must be globally unique
bucket_name = "my-unique-podcast-bucket-name"

# Your custom domain name
domain_name = "podcast.yourdomain.com"

# Route53 hosted zone ID for your domain
# You can find this in the AWS Console under Route53 > Hosted zones
route53_zone_id = "Z1234567890ABC"

# Environment name
environment = "prod"

# Project name for resource tagging
project_name = "waffles-podcast" 